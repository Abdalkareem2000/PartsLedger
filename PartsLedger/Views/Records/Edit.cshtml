@model Web.Models.RecordViewModel

@{
    ViewData["Title"] = "Edit Record";
}
<style>
    .form-label {
        color: #fdfdfd;
    }
</style>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Index" class="btn btn-secondary">Back to Index</a>
        <h1 class="mb-0">Edit Record</h1>
        <div></div>
    </div>

    <form asp-action="Edit" method="post" novalidate>
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="FCNo" class="form-label"></label>
            <input asp-for="FCNo" class="form-control" />
            <span asp-validation-for="FCNo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OEM" class="form-label"></label>
            <input asp-for="OEM" class="form-control" />
            <span asp-validation-for="OEM" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Product" class="form-label"></label>
            <input asp-for="Product" class="form-control" />
            <span asp-validation-for="Product" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Model" class="form-label"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EngineCode" class="form-label"></label>
            <input asp-for="EngineCode" class="form-control" />
            <span asp-validation-for="EngineCode" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Update Record</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
